<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/studen.css">
    <title>Student</title>

</head>

<body>
    <div class="main">
        <div class="stu">
            <h2 class="heder"><%=student.studentName%></h2>
            
            <div class="pic"></div>
            <div class="student">
              
                <div class="one">
                    
                    <p>Id:- <%=student.id%></p>
                    <p>Fee:- <%=student.money%></p>
                    <p>Date:- <%=student.admissionDate%></p>
                    <p>Phone no:- <%=student.phoneNo%>
                    </p>
                    <p>Father Name:- <%=student.fatherName%>
                    </p>
                    <p>Mother Name:- <%=student.motherName%>
                    </p>
                    <p>Address:- <%=student.address%>
                    </p>
                </div>
                <div class="tow">
                    
                </div>
            </div>
            <div class="fee">
                <table>
                    <thead class="thead">
                        <tr>
                            <th>Month</th>
                            <!-- <th>Fee paid 2024</th> -->
                        </tr>
                        <tr>
                            
                            
                        </tr>
                    </thead>
                    <% const months=[ 'January' , 'February' , 'March' , 'April' , 'May' , 'June' , 'July' , 'August'
                        , 'September' , 'October' , 'November' , 'December' ]; %>
                        <%var i=0%>
                        <tbody class="table">
                            <% student.fees.forEach(function(fee) { %>
                                <%if(i<=11){%>
                                <tr>   
                                    <td style="border: 1px solid black;"><%=months[i] %></td>
                                    </td>
                                    <td>
                                        <%if(fee===true){%>
                                
                                            <td style="border: 1px solid black;">paid</td>
                                        <%}else{%>
                                            <td style="border: 1px solid black;">NO</td>
                                        <%}%>

                                    </td>
                                </tr>
                                <%i=i+1%>
                                <%}%>
                                <% }); %>
                        </tbody>

                </table>
            </div>
            <div class="button">
                <form action="/edit/<%=student._id%>" method="get">
                    <button class="btn1">Edit</button>
                </form>
                <form action="/payfee" method="get">
                    <button class="btn2">Pay fee</button>
                </form>
            </div>

        </div>

    </div>
</body>

</html>